{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "es2020"
    ],
    "outDir": "./build",
    "rootDirs": [
      "./src",
      "./database"
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*",
        "./database/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}